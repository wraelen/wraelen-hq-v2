{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": { // Add this for @/ alias
      "@/*": [
        "././*"
      ],
      "styles/*": [
        "./src/styles/*"
      ] // Add this if styles/ under src/
    },
    "types": [
      "node",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.mjs",
    "vitest.config.ts",
    ".next/types/**/*.ts",
    "eslint.config.mjs"
, "middleware.ts"  ] // Added: "src/types/next-auth.d.ts" to include augmentation for NextAuth/JWT types (fixes TS2345 callbacks incompatible; best practice for custom session extensions)  "exclude": ["node_modules"]
  ,
  "exclude": [
    "node_modules"
  ]
}
